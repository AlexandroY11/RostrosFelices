	ViewData["Title"] = "Index Services";
}
<h1>Index Services</h1>

<p>
	<a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">

	<thead>
		<tr>
			th>
			@Html.DisplayNameFor(model => model.Services[0].Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Services[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Services[0].Fecha)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Services[0].EmployeeId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Services[0].EmployeeName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Services[0].ClientId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Services[0].ClientName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Services[0].Observation)
			</th>
			

			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Services)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td> 
				<td>
					@Html.DisplayFor(modelItem => item.Fecha)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EmployeeId)
				</td>
				 <td>
					@Html.DisplayFor(modelItem => item.EmployeeName)
				</td> 
				<td>
					@Html.DisplayFor(modelItem => item.ClientId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ClientName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Observation)
				</td>
				@* <td>
					@Html.DisplayFor(modelItem => item.Employee)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Client)
				</td> *@

				<td>

					<a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
					<a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
					@* <span></span> *@
				</td>
			</tr>
		}
	</tbody>
